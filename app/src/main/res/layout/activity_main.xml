<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10sp"
    android:paddingRight="10sp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Bahasa Pemrograman"
            android:textColor="@color/purple_500"
            android:textSize="19sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/txtBahasaPemrograman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Java"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp" />

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="description"
            android:textAlignment="center"
            android:textColor="#888"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autoLink="web"
            android:text="read more"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtHelloWorld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="hello world"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp" />

        <RelativeLayout
            android:id="@+id/lyCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnJava"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20sp"
                android:paddingRight="20sp"
                android:text="Java" />

            <Button
                android:id="@+id/btnC"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/btnJava"
                android:paddingLeft="31sp"
                android:paddingRight="31sp"
                android:text="C" />

            <Button
                android:id="@+id/btnJS"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btnC"
                android:paddingLeft="29sp"
                android:paddingRight="29sp"
                android:text="Js" />

            <Button
                android:id="@+id/btnPy"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnJava"
                android:paddingLeft="29sp"
                android:paddingRight="29sp"
                android:text="Py" />

            <Button
                android:id="@+id/btnDart"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnC"
                android:layout_toRightOf="@+id/btnPy"
                android:paddingLeft="18sp"
                android:paddingRight="18sp"
                android:text="Dart" />

            <Button
                android:id="@+id/btnGo"
                style="@style/Widget.AppCompat.Button.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnJS"
                android:layout_toRightOf="@+id/btnDart"
                android:paddingLeft="27sp"
                android:paddingRight="27sp"
                android:text="Go" />

        </RelativeLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:src="@android:drawable/ic_menu_rotate"
        android:text="Refresh" />

</RelativeLayout>